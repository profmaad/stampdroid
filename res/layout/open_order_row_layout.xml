<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    >
  <TextView android:id="@+id/open_order_row_timestamp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="12sp"
	    android:gravity="left|center_vertical"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentLeft="true"
	    />
  <TextView android:id="@+id/open_order_row_type"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="12sp"
	    android:gravity="right|center_vertical"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    android:layout_toRightOf="@id/open_order_row_timestamp"
	    />
  <TextView android:id="@+id/open_order_row_amount"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="20sp"
	    android:gravity="left|center_vertical"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@id/open_order_row_timestamp"
	    />
  <TextView android:id="@+id/open_order_row_at"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="20sp"
	    android:gravity="center"
	    android:layout_toRightOf="@id/open_order_row_amount"
	    android:layout_toLeftOf="@+id/open_order_row_price"
	    android:layout_alignBottom="@id/open_order_row_amount"
	    android:text="@string/open_order_row_at"
	    />
  <TextView android:id="@id/open_order_row_price"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="20sp"
	    android:gravity="right|center_vertical"
	    android:layout_alignParentRight="true"
	    android:layout_below="@id/open_order_row_type"
	    android:layout_alignBottom="@id/open_order_row_amount"
	    />
</RelativeLayout>

